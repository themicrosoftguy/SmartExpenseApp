<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartExpenseApp.Views.Onboarding"
             Title="Smart Expense">
    <VerticalStackLayout Padding="20" Spacing="20" HorizontalOptions="Center" VerticalOptions="Center">

        <!-- Image Placeholder -->
        <Image Source="your_image.png"
               HeightRequest="200"
               HorizontalOptions="Center" />

        <!-- Title -->
        <Label Text="Gain total control of your money"
               FontSize="24"
               TextColor="Black"
               HorizontalTextAlignment="Center"
               FontAttributes="Bold"
               Margin="0,20,0,0" />

        <!-- Subtitle -->
        <Label Text="Become your own money manager and make every cent count"
               FontSize="14"
               TextColor="Gray"
               HorizontalTextAlignment="Center" />

        <!-- Pagination Dots -->
        <HorizontalStackLayout HorizontalOptions="Center" Spacing="5">
            <BoxView WidthRequest="8" HeightRequest="8" CornerRadius="4" Color ="#8B5CF6"/>
            <BoxView WidthRequest="8" HeightRequest="8" CornerRadius="4" Color="#D3D3D3" />
            <BoxView WidthRequest="8" HeightRequest="8" CornerRadius="4" Color="#D3D3D3" />
        </HorizontalStackLayout>

        <!-- Buttons -->
        <Button Text="Sign Up"
                BackgroundColor="#8B5CF6"
                TextColor="White"
                FontSize="18"
                HeightRequest="50"
                CornerRadius="25"
                HorizontalOptions="Fill" />

        <Button Text="Login"
                BackgroundColor="#EDEDED"
                TextColor="#8B5CF6"
                FontSize="18"
                HeightRequest="50"
                CornerRadius="25"
                HorizontalOptions="Fill" />
    </VerticalStackLayout>
</ContentPage>